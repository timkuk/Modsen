@model GodelTourAgensy.DAL.Entities.TravelPackageEntity

@{ ViewData["Title"] = "Создание"; }

<div class="container">
    <h1>Добавление</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreatePackage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BookingMark" class="control-label"></label>
                    <input asp-for="BookingMark" class="form-control" />
                    <span asp-validation-for="BookingMark" class="text-danger"></span>
                </div>
                <div class="form">
                    <label asp-for="ClientId" class="control-label"></label>
                    <input asp-for="ClientId" class="form-control" />
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoomId" class="control-label"></label>
                    <input asp-for="RoomId" class="form-control" />
                    <span  asp-validation-for="RoomId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}